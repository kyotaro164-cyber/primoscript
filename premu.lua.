-- [[ SLH CLAN | PRIMO PUBLIC SCRIPT - MUSCLE LEGENDS ]] --
local library = loadstring(game:HttpGet("https://raw.githubusercontent.com/memejames/elerium-v2-ui-library/main/Library", true))()

-- [[ ANTI-AFK SYSTEM ]] --
local vu = game:GetService("VirtualUser")
game:GetService("Players").LocalPlayer.Idled:Connect(function()
    vu:CaptureController()
    vu:ClickButton2(Vector2.new())
end)

local window = library:AddWindow(" SLH Clan | PUBLIC SCRIPT made by primo", {
    main_color = Color3.fromRGB(255, 212, 42), -- Yellow Theme
    min_size = Vector2.new(650, 820),
})

-- [[ TABS BASED ON GAME MECHANICS ]] --
local MainTab = window:AddTab("Main")
local FarmTab = window:AddTab("Farming")
local ServerTab = window:AddTab("Server")
local KillTab = window:AddTab("Killing")
local SpecsTab = window:AddTab("Specs")
local StatsTab = window:AddTab("Stats")
local CrystalTab = window:AddTab("Crystal")
local TPTab = window:AddTab("Teleport")
local MiscTab = window:AddTab("Misc")
local InfoTab = window:AddTab("Info")

-- [[ MAIN: TRAINING LOGIC ]] --
MainTab:AddSwitch("Auto Strength (Weight)", function(state)
    _G.AutoStrength = state
    task.spawn(function()
        while _G.AutoStrength do
            game:GetService("ReplicatedStorage").rEvents.liftingEvent:FireServer("Weight")
            task.wait() -- Ultra Fast
        end
    end)
end)

MainTab:AddSwitch("Auto Durability (Pushups)", function(state)
    _G.AutoDurability = state
    task.spawn(function()
        while _G.AutoDurability do
            game:GetService("ReplicatedStorage").rEvents.pushupsEvent:FireServer("Pushups")
            task.wait()
        end
    end)
end)

MainTab:AddSwitch("Auto Agility (Treadmill)", function(state)
    -- Automates Agility gains without flying away
    _G.AutoAgility = state
    task.spawn(function()
        while _G.AutoAgility do
            game:GetService("ReplicatedStorage").rEvents.speedEvent:FireServer("Speed")
            task.wait()
        end
    end)
end)

-- [[ FARMING: ROCKS ]] --
FarmTab:AddSwitch("Auto Rock Mining", function(state)
    _G.AutoRock = state
    task.spawn(function()
        while _G.AutoRock do
            game:GetService("ReplicatedStorage").rEvents.miningEvent:FireServer("Rock")
            task.wait()
        end
    end)
end)

-- [[ KILLING: COMBAT ]] --
KillTab:AddSwitch("Kill Aura (Radius)", function(state)
    _G.KillAura = state
    task.spawn(function()
        while _G.KillAura do
            for _, v in pairs(game.Players:GetPlayers()) do
                if v ~= game.Players.LocalPlayer and v.Character and v.Character:FindFirstChild("HumanoidRootPart") then
                    local dist = (game.Players.LocalPlayer.Character.HumanoidRootPart.Position - v.Character.HumanoidRootPart.Position).magnitude
                    if dist < 20 then
                        game:GetService("ReplicatedStorage").rEvents.punchEvent:FireServer("Punch")
                    end
                end
            end
            task.wait(0.1)
        end
    end)
end)

-- [[ STATS: REBIRTHS ]] --
StatsTab:AddSwitch("Auto Rebirth", function(state)
    _G.AutoRebirth = state
    task.spawn(function()
        while _G.AutoRebirth do
            game:GetService("ReplicatedStorage").rEvents.rebirthEvent:FireServer("rebirthRequest")
            task.wait(2)
        end
    end)
end)

-- [[ CRYSTAL: PETS & DRIPS ]] --
local selectedCrystal = "Blue Crystal"
CrystalTab:AddDropdown("Choose Crystal", {"Blue Crystal", "Green Crystal", "Frost Crystal", "Mythical Crystal", "Legendary Crystal", "Inferno Crystal"}, function(v)
    selectedCrystal = v
end)

CrystalTab:AddSwitch("Auto Hatch Pets", function(state)
    _G.Hatch = state
    task.spawn(function()
        while _G.Hatch do
            game:GetService("ReplicatedStorage").rEvents.openCrystalEvent:FireServer(selectedCrystal)
            task.wait(1.1)
        end
    end)
end)

-- [[ TELEPORT: GYMS & AREAS ]] --
TPTab:AddButton("Spawn Island (0 Strength)", function()
    game.Players.LocalPlayer.Character.HumanoidRootPart.CFrame = CFrame.new(0, 4, 0)
end)
TPTab:AddButton("Frost Island (10K Strength)", function()
    game.Players.LocalPlayer.Character.HumanoidRootPart.CFrame = CFrame.new(-2544, 13, -435)
end)
TPTab:AddButton("Mythical Gym (100K Strength)", function()
    game.Players.LocalPlayer.Character.HumanoidRootPart.CFrame = CFrame.new(2285, 13, 1056)
end)
TPTab:AddButton("Legendary Gym (5M Strength)", function()
    game.Players.LocalPlayer.Character.HumanoidRootPart.CFrame = CFrame.new(4182, 987, -3906)
end)

-- [[ SPECS: GAME PASSES/ITEMS ]] --
SpecsTab:AddButton("Collect Daily Rewards", function()
    game:GetService("ReplicatedStorage").rEvents.checkDailyRewardEvent:FireServer()
end)

SpecsTab:AddButton("Unlock All Gyms (Visual)", function()
    -- Makes gyms accessible
    for i,v in pairs(game:GetService("Workspace").gyms:GetChildren()) do
        v.canEnter.Value = true
    end
end)

-- [[ MISC: CHARACTER ]] --
MiscTab:AddSlider("WalkSpeed", 16, 500, function(v)
    game.Players.LocalPlayer.Character.Humanoid.WalkSpeed = v
end)

MiscTab:AddSlider("JumpPower", 50, 500, function(v)
    game.Players.LocalPlayer.Character.Humanoid.JumpPower = v
end)

-- [[ INFO ]] --
InfoTab:AddLabel("SLH CLAN | PRIMO PUBLIC")
InfoTab:AddLabel("Specialized for Muscle Legends")
InfoTab:AddLabel("Status: 100% Functional")

game.StarterGui:SetCore("SendNotification", {
    Title = "PRIMO PUBLIC LOADED",
    Text = "Muscle Legends Script is Ready!",
    Duration = 5
})
